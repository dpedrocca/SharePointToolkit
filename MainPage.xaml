<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SharePointToolkit.MainPage"
             xmlns:local="clr-namespace:SharePointToolkit;assembly=SharePointToolkit"
             xmlns:views="clr-namespace:SharePointToolkit"
             Title="SharePoint Toolkit">

    <TabBar>
        <Tab Title="Tests">
            <ShellContent ContentTemplate="{DataTemplate views:TestConnection}" />
        </Tab>
        <Tab Title="Documents">
            <ShellContent Title="Show Documents List" ContentTemplate="{DataTemplate views:DocumentsList}" />
            <ShellContent Title="Doc2" ContentTemplate="{DataTemplate views:Documents}" />
        </Tab>
        <Tab Title="Security">
            <ShellContent ContentTemplate="{DataTemplate views:TestConnection}" />
        </Tab>
    </TabBar>
</Shell>
